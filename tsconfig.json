{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "lib": ["ES2020"],
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*",
    "test/**/*.d.ts",
  ]
}
